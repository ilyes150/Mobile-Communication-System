{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Compile Java",
            "type": "shell",
            "command": "javac",
            "args": [
                "-d",
                "bin",
                "src/*.java",
                "test/*.java"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$javac"
            ]
        },
        {
            "label": "Run Test",
            "type": "shell",
            "command": "java",
            "args": [
                "-cp",
                "bin",
                "Test"
            ],
            "dependsOn": "Compile Java",
            "group": {
                "kind": "test",
                "isDefault": true
            }
        },
        {
            "label": "Clean",
            "type": "shell",
            "command": "rm",
            "args": [
                "-rf",
                "bin"
            ],
            "windows": {
                "command": "rmdir",
                "args": [
                    "/s",
                    "/q",
                    "bin"
                ]
            }
        }
    ]
}